{
    "name": "chatgpt-desktop",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder"
    },
    "build": {
        "appId": "com.slhaf.chatgpt.pruned",
        "productName": "ChatGPT Desktop Pruned Version",
        "files": [
            "main.js",
            "pruner.user.js",
            "package.json"
        ],
        "linux": {
            "target": [
                "AppImage"
            ],
            "category": "Utility"
        },
        "win": {
            "target": [
                "nsis"
            ]
        },
        "mac": {
            "target": [
                "dmg"
            ]
        }
    },
    "devDependencies": {
        "electron": "^39.0.0",
        "electron-builder": "^24.0.0"
    }
}
